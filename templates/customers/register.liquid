<div class="container">
  <div class="customer">
    <div class="register box-register-page">
      <h1 class="title">
        {{- 'customer.register.title' | t -}}
      </h1>

      <p class="sub-title">
        {{- 'customer.login_page.already_account' | t }}

        <a href="{{ routes.account_login_url }}" class="sign-in">
          {{- 'customer.login_page.sign_in' | t -}}
        </a>
      </p>

      {%- form 'create_customer', novalidate: 'novalidate' -%}
        {%- if form.errors -%}
          <h3 class="message error-message" tabindex="-1" autofocus>
            {{- 'templates.form.contact.error_heading' | t -}}
          </h3>

          <ul>
            {%- for field in form.errors -%}
              <li>
                {%- if field == 'form' -%}
                  {{- form.errors.messages[field] -}}
                {%- else -%}
                  <a href="#register-form-{{ field }}">
                    {{- form.errors.translated_fields[field] | capitalize -}}
                    {{- form.errors.messages[field] -}}
                  </a>
                {%- endif -%}
              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}

        <div class="field-input">
          <input
            type="text"
            name="customer[name]"
            id="register-form-name"
            {% if form.name %}
              value="{{ form.name }}"
            {% endif %}
            autocomplete="given-name"
            placeholder="{{ 'customer.register.name' | t }}"
          >
        </div>

        <div class="field-input">
          <input
            type="email"
            name="customer[email]"
            id="register-form-email"
            {% if form.email %}
              value="{{ form.email }}"
            {% endif %}
            spellcheck="false"
            autocapitalize="off"
            autocomplete="email"
            aria-required="true"
            {% if form.errors contains 'email' %}
              aria-invalid="true" aria-describedby="register-form-email-error"
            {% endif %}
            placeholder="{{ 'customer.register.email' | t }}"
          >
        </div>

        {%- if form.errors contains 'email' -%}
          <h3 id="register-form-email-error" class="message error-message">
            {{- form.errors.translated_fields.email | capitalize }}
            {{ form.errors.messages.email -}}
            .
          </h3>
        {%- endif -%}

        <div class="field-input">
          <input
            type="password"
            name="customer[password]"
            id="register-form-password"
            aria-required="true"
            {% if form.errors contains 'password' %}
              aria-invalid="true" aria-describedby="register-form-password-error"
            {% endif %}
            placeholder="{{ 'customer.register.password' | t }}"
          >
        </div>

        {%- if form.errors contains 'password' -%}
          <h3 id="register-form-password-error" class="message error-message">
            {{- form.errors.translated_fields.password | capitalize }}
            {{ form.errors.messages.password -}}
            .
          </h3>
        {%- endif -%}

        <button class="button medium-button primary-button hover-animated">
          {{- 'customer.register.submit' | t -}}
        </button>
      {%- endform -%}
    </div>
  </div>
</div>
{% comment %}
  {% section 'newletter' %}
{% endcomment %}
{% section 'icon-box' %}
